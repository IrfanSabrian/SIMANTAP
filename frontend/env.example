# ============================================
# Backend API Configuration
# ============================================
# Base URL untuk backend API (tanpa /api di akhir)
NUXT_PUBLIC_API_BASE_URL=http://localhost:3001

# Full URL untuk backend API (termasuk /api di akhir)
# Jika tidak di-set, akan otomatis dibuat dari NUXT_PUBLIC_API_BASE_URL + /api
NUXT_PUBLIC_API_URL=http://localhost:3001/api


# ============================================
# Frontend Configuration
# ============================================
NUXT_PUBLIC_APP_NAME=SIJALI
NUXT_PUBLIC_APP_VERSION=1.0.0
NUXT_PUBLIC_APP_DESCRIPTION=Sistem Informasi Jalan Lingkungan Kab. Kubu Raya

# ============================================
# ArcGIS Configuration
# ============================================
NUXT_PUBLIC_ARCGIS_API_KEY=your-api-key-here

# ============================================
# Map Configuration
# ============================================
NUXT_PUBLIC_MAP_CENTER_LAT=-0.5
NUXT_PUBLIC_MAP_CENTER_LNG=109.3
NUXT_PUBLIC_MAP_ZOOM=10

# ============================================
# Cloudinary Configuration (jika digunakan)
# ============================================
NUXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NUXT_PUBLIC_CLOUDINARY_FOLDER=SIJALI
